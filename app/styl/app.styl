// vendor
@import 'optimize'

//helpers
setSize($width, $height = $width)
	width $width
	height $height
	
addTrans($prop = all, $dur = 0.3s, $func = ease-in-out, $delay = 0s)
	transition $prop $dur $func $delay
	
//animations
@keyframes showEl
	0%
		opacity 0
		transform scale(.3) rotate(45deg)

	50%
		opacity 1
		transform scale(1.05) rotate(180deg)

	70%
		transform scale(.9) rotate(0deg)

	100%
		opacity 1
		transform scale(1) rotate(45deg)

// common
.body
	setSize(100%, 180vh)

.canvas
	position fixed
	left 0
	top 0
	setSize(100%)
	&__el
		position relative
		left calc(50% - 10vh)
		display block
		setSize(20vh)
		transform rotate(45deg)
		background green
		addTrans(null, .15s, linear)
		animation showEl 2s
		&:hover
			cursor pointer
			transform rotate(-45deg) scale(1.4)
			box-shadow inset 0 0 5vh #000	